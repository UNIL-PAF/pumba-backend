# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Home page
GET     /                                                   ch.unil.paf.pumba.controllers.HomeController.index

# upload MaxQuant data
POST /upload/:dataSetName/sample/:sample                    ch.unil.paf.pumba.controllers.UploadMaxQuantController.uploadZipFile(dataSetName: String, sample: String)

# get the protein infos
GET /proteins/:proteinId                                    ch.unil.paf.pumba.controllers.ProteinsController.getProteins(proteinId: String)
GET /merge-proteins/:proteinId/data-sets/:dataSetsString    ch.unil.paf.pumba.controllers.ProteinsController.mergeProteins(proteinId: String, dataSetsString: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                       controllers.Assets.versioned(path="/public", file: Asset)
